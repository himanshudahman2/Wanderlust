<% layout("/layouts/boilerplate") -%>
<body>
    <div class="row"> 
        <div class="col-8 offset-2">
            <br>
            <h2>Create a Listing</h2>
            <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                <div>
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" placeholder="Enter title" type="text" class="form-control" required> 
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        title required!
                    </div>
                </div>
                <br>
                <div>
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" class="form-control" required></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        please write a short description
                    </div>
                </div>
                <br>
                <div class="col-10">
                    <label for="image" class="form-label">Upload Image</label>
                    <input name="listing[image]"  type="file" class="form-control">
                    <div class="valid-feedback">
                        optional
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="col-4">
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" placeholder="Enter price"  class="form-control" required>
                        <div class="invalid-feedback">
                            Please enter a valid price!
                        </div>
                    </div>
                    <div class="col-8">
                        <label for="country" class="form-label">Country</label>
                        <input name="listing[country]" placeholder="Enter country" type="text" class="form-control" required>
                        <div class="invalid-feedback">
                            Please enter a valid country name!
                        </div>
                    </div>
                </div>
                <br>
                <div>
                    <label for="location" class="form-label">Location</label>
                    <input name="listing[location]" placeholder="Enter location" class="form-control" required>
                    <div class="invalid-feedback">
                        Please enter a valid location!
                    </div>
                </div>
                <br>
                <button class="btn btn-danger">Add</button>
            </form>
        </div>
    </div>
</body>
