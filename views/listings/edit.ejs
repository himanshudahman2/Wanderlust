<% layout("/layouts/boilerplate") %>
<body>
    <div class="row">
        <div class="col-10">
            <h2>Edit your listing</h2>
            <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation"
                enctype="multipart/form-data">
                
                <div>
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" value="<%= listing.title %>" type="text" class="form-control" required>
                    <div class="invalid-feedback">
                        Please enter a valid title.
                    </div>
                </div>
                
                <br>
                
                <div>
                    <label for="description" class="form-label">Description</label>
                    <textarea class="form-control" name="listing[description]" required><%= listing.description %></textarea>
                    <div class="invalid-feedback">
                        Please enter a valid description.
                    </div>
                </div>
                
                <div class="mb-3">
                    Original Listing Image <br>
                    <img src="<%= originalImageUrl %>">
                </div>
                
                <br>
                
                <div>
                    <label for="image" class="form-label">Upload new image</label>
                    <input class="form-control" name="listing[image]"  type="file" >
                    <div class="invalid-feedback">
                        Please enter a valid image URL.
                    </div>
                </div>
                
                <br>
                
                <div class="row">
                    <div class="col-4">
                        <label for="price" class="form-label">Price</label>
                        <input class="form-control" name="listing[price]" value="<%= listing.price %>" type="number" required>
                        <div class="invalid-feedback">
                            Please enter a valid price.
                        </div>
                    </div>
                    
                    <div class="col-4">
                        <label for="location" class="form-label">Location</label>
                        <input class="form-control" name="listing[location]" value="<%= listing.location %>" required>
                        <div class="invalid-feedback">
                            Please enter a valid location.
                        </div>
                    </div>
                </div>
                
                <br>
                
                <div>
                    <label for="country" class="form-label">Country</label>
                    <input class="form-control" name="listing[country]" value="<%= listing.country %>" type="text" required>
                    <div class="invalid-feedback">
                        Please enter a valid country.
                    </div>
                </div>
                
                <br><br>
                
                <button type="submit" class="btn btn-danger">Edit</button>
            </form>
        </div>
    </div>
</body>
